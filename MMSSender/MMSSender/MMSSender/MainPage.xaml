<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MMSSender.MainPage">

    <StackLayout>

        <Label Text="Press Button to send url" FontSize="Title" Padding="30,10,30,10"/>
        <Button Text="Click me" Clicked="ShareUri" />
        <Label Text="Press Button to send file" FontSize="Title" Padding="30,10,30,10"/>
        <Button Text="Click me" Clicked="ShareFile" />

        <Entry Text=""
               Placeholder="Enter Text Here..."
               x:Name="EntryShare"
               VerticalOptions="CenterAndExpand"
               HorizontalOptions="Center" />
        <Button x:Name="ButtonShare"
                Clicked="ButtonShare_Clicked"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="Center"
                TextColor="Black"
                BackgroundColor="Transparent"
                Text="Share" />

    </StackLayout>

</ContentPage>
